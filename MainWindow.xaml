<Window x:Class="ArthurCrivilinDelCaro_d7_avaliacao.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ArthurCrivilinDelCaro_d7_avaliacao"
        mc:Ignorable="d"
        Title="MainWindow" Width="480">
    <Grid Height="660" Width="480">
        <Label Margin="0,60,0,0" Content="Autenticação de usuário" FontSize="24" FontFamily="Inter" VerticalAlignment="Top" HorizontalAlignment="Center" FontWeight="Bold"/>
        <Label Margin="60,145,0,0" Padding="0" Content="Usuário" FontSize="16" FontFamily="Inter" VerticalAlignment="Top"/>
        <TextBox Name="UserEmail" Margin="60,180,60,0" Height="60" VerticalAlignment="Top" VerticalContentAlignment="Center"/>
        <Label Margin="60,325,0,0" Padding="0" Content="Senha" FontSize="16" FontFamily="Inter" VerticalAlignment="Top"/>
        <PasswordBox Name="UserPassword" Margin="60,360,60,0" Height="60" VerticalAlignment="Top" VerticalContentAlignment="Center"/>
        <Button Margin="120,540,120,60" Content="Acessar" FontFamily="Inter" Height="60" Width="240" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="16" Click="Button_Click"/>
    </Grid>
</Window>
